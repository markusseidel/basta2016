<Window x:Class="WpfActorsMandelbrot.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfActorsMandelbrot"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <DockPanel>
        <StackPanel Orientation="Vertical" DockPanel.Dock="Right" Margin="20,10">
            <Button x:Name="drawButton" Width="80" Click="drawButton_Click">Draw!</Button>
        </StackPanel>
        <DockPanel x:Name="imagePanel">
            <Image x:Name="image" />
        </DockPanel>
    </DockPanel>
</Window>
